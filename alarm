            "##    '##.",
            "        ##",
            "       .#'",
            "    ####< ",
            "       '#.",
            "        ##",
            "##    .##'",
            " '#####'  ",
        ],
        4 => [
            "       ## ",
            "     .### ",
            "    a#'## ",
            "   ##' ## ",
            "  ##   ## ",
            ".#'    ## ",
            "##########",
            "       ## ",
            "       ## ",
        ],
        5 => [
            " #########",
            ".#'     ' ",
            "a#        ",
            "##.####.  ",
            "#'    '## ",
            "        ##",
            "        ##",
            " #.   .## ",
            " '#####'  ",
        ],
        6 => [
            "  .####a  ",
            " ##    '# ",
            "##        ",
            "##        ",
            "##.#####. ",
            "##'    '#a",
            "##      ##",
            "'#.    a##",
            "  '#####' ",
        ],
        7 => [
            "##########",
            "#'     ## ",
            "      ##  ",
            "     ##   ",
            "  ######  ",
            "   ##     ",
            "  ##      ",
            " ##       ",
            "##        ",
        ],
        8 => [
            " .######. ",
            "##'    '##",
            "##      ##",
            "'#.    .#'",
            " >######< ",
            ".#'    '#.",
            "##      ##",
            "##.    .##",
            " '######' ",
        ],
        9 => [
            " .######. ",
            "a#     '#a",
            "##      ##",
