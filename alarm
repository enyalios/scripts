            "     ##   ",
            "   ##     ",
            " ##       ",
        ],
        ":" => [
            "    ",
            "    ",
            " mm ",
            " ## ",
            "    ",
            " mm ",
            " ## ",
            "    ",
            "    ",
        ],
        " " => [
            "    ",
